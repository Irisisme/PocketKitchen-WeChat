.category {
    margin-left: 3px;
    margin-right: 3px;
    margin-top: 5px;
    border-radius: 2px;
}

.category-name-text {
    color: white;
    font-size: 1.1rem;
    font-weight: bold;
    line-height: 30px;
    margin-left: 5px;
}

.category-row {
    display: flex;
    flex-direction: row;
}

.v-divider {
    width: 1px;
    height: 45px;
    background-color: #FFFFFF
}

.h-divider {
    height: 1px;
    background-color: #FFFFFF
}

.category-item {
    color: white;
    flex: 1;
    height: 45px;
    text-align: center;
    line-height: 45px;
    /*background-color: #6699ff;*/
}

.category-item:active {
    opacity: 0.5;
}

.category-red {
    background-color: #FC5163
}

.category-blue {
    background-color: #3C98FD
}

.category-yellow {
    background-color: #FB971F
}

.category-green {
    background-color: #4EC72E
}